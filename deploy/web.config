<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <system.webServer>

    <!-- 1. Tell IIS to use iisnode for server.js -->
    <handlers>
      <add name="iisnode" path="server.js" verb="*" modules="iisnode" />
    </handlers>

    <!-- 2. Rewrite all incoming URLs to server.js -->
    <rewrite>
      <rules>
        <rule name="DynamicContent">
          <match url="(.*)" />
          <conditions>
            <!-- Skip URLs that match physical files (static assets) -->
            <add input="{REQUEST_FILENAME}" matchType="IsFile" negate="true" />
          </conditions>
          <action type="Rewrite" url="server.js" />
        </rule>
      </rules>
    </rewrite>

    <!-- 3. Hide node_modules (security) -->
    <security>
      <requestFiltering>
        <hiddenSegments>
          <add segment="node_modules" />
        </hiddenSegments>
      </requestFiltering>
    </security>

    <!-- 4. iisnode settings -->
    <iisnode 
      loggingEnabled="true" 
      debuggingEnabled="false" 
      maxConcurrentRequestsPerProcess="1024" />

  </system.webServer>
</configuration>
